\end_layout

\begin_layout Standard
\begin_inset listings
lstparams "basicstyle={\small\ttfamily}"
inline false
status open

\begin_layout Plain Layout

	_subj(say, Mary)
\end_layout

\begin_layout Plain Layout

	_that(say, smell)
\end_layout

\begin_layout Plain Layout

	_subj(smell, rose)
\end_layout

\begin_layout Plain Layout

	_to-be(smell, sweet) 
\end_layout

\begin_layout Plain Layout

	HYP(smell, T)
\end_layout

\begin_layout Plain Layout

	HYP(sweet, T)
\end_layout

\end_inset

