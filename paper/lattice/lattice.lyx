\begin_inset Formula \begin{equation}
\tau^{-1}(x,y)=\left(2x-\left\lfloor 2x\right\rfloor \,,\,\frac{y+\left\lfloor 2x\right\rfloor }{2}\right)\label{eq:}\end{equation}

\end_inset 

